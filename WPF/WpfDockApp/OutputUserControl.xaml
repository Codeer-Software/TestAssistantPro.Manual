<UserControl x:Class="WpfDockApp.OutputUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDockApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button x:Name="ButtonCopy" Content="Copy" Click="ButtonCopy_Click" />
                <Button x:Name="ButtonSaveFile" Content="Save File" Click="ButtonSaveFile_Click" />
                <Button x:Name="ButtonClear" Content="Clear" Click="ButtonClear_Click" />
            </ToolBar>
        </ToolBarTray>
        <TextBox x:Name="TextBox" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
